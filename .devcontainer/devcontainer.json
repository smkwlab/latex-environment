{
  // latex-environment version: 0.5.0
  // Compatible with texlive-ja-textlint: 2025d (TeXLive 2025)
  // See VERSIONS.md for compatibility matrix
  "name": "LaTeX Environment",
  "image": "ghcr.io/smkwlab/texlive-ja-textlint:2025d",
  
  "remoteUser": "texuser",
  
  "customizations": {
    "vscode": {
      "settings": {
        "textlint.nodePath": "/npm/node_modules",
        "editor.fontFamily": "'BIZ UDPGothic', Meiryo, 'Hiragino Kaku Gothic ProN', 'SF Mono', Consolas, monospace",
        "editor.fontSize": 14,
        "editor.lineHeight": 1.6,
        "editor.wordWrap": "on",
        "files.autoSave": "afterDelay",
        "files.autoSaveDelay": 1000,
        "latex-workshop.latex.autoBuild.run": "onFileChange",
        "latex-workshop.latex.watch.delay": 1000,
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.fontSize": 13,
        "terminal.integrated.fontFamily": "HackGen, 'SF Mono', 'BIZ UDGothic', Consolas, 'Courier New', monospace",
        "git.enableSmartCommit": true,
        "git.confirmSync": false,
        "workbench.colorTheme": "Default Light+",
        "window.zoomLevel": 0
      },
      
      "extensions": [
        "james-yu.latex-workshop",
        "texlab-org.texlab",
        "GitHub.vscode-pull-request-github", 
        "3w36zj6.textlint",
        "tomoki1207.pdf",
        "streetsidesoftware.code-spell-checker",
        "mhutchie.git-graph",
        "MS-CEINTL.vscode-language-pack-ja",
        "GitHub.copilot",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml"
      ]
    }
  },
  
  "forwardPorts": [],
  
  "postCreateCommand": "echo 'LaTeX環境が準備できました！論文執筆を開始してください。'"
}
